<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_activity_text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginHorizontal">25dp</item>
        <item name="startIconDrawable">@drawable/baseline_face_black_24dp</item>
        <item name="boxBackgroundColor">@color/main_activity_inputs_background</item>
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="main_activity_autocomplete_input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">18dp</item>
        <item name="android:layout_marginHorizontal">25dp</item>
        <item name="boxBackgroundColor">@color/main_activity_inputs_background</item>
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <style name="autocomplete_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:inputType">none</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/main_activity_btn_yellow_disabled</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_marginVertical">49dp</item>
        <item name="android:paddingHorizontal">58dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.buttonText</item>
    </style>

    <style name="TextAppearance.buttonText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>